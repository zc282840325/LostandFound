<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Lost Item</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript">
        $(function () {
            var username = getCookie("UserName");
            $("#UserName").html(username);
            var userimag = getCookie("UerImage");
            $("#UserImage").attr("src",userimag);
            $("#LoginUser").mouseover(function () {
                $("#List").css("display","block");
            });
            $("#LoginUser").mouseout(function () {
                	   $("#List").css("display","none");
            });
            

        });


        function getCookie(name) {
            var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)"); //正则匹配
            if (arr = document.cookie.match(reg)) {
                return unescape(arr[2]);
            }
            else {
                return null;
            }
        }
    </script>
    <style type="text/css">
        ul li {
        list-style-type:none;
        }
    </style>
</head>


<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle"  data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request["AID"] == null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Lost Item", "Index", "LostItem")</li>
                        <li>@Html.ActionLink("News", "Index", "News")</li>
                        <li>@Html.ActionLink("Contact Us", "Index", "ContactUs")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Item Manager", "ItemManagenment", "News")</li>
                        <li>
                            @Html.ActionLink("Logot", "Logot", "Home")
                        </li>
                            }

                    </ul>
                <ul class="nav navbar-nav" style="float:right;">
                    @if (Request["UID"] == null)
                    {
                        if (Request["AID"] != null)
                        {
                            <li style="color:white;text-align:center;line-height:50px;">
                                Welcome to the arrival of
                                <span id="UserName"></span>
                                ！
                            </li>
                            <li>
                                <div style="width:30px; height:30px; border-radius:50%; overflow:hidden;text-align:center;margin-top:10px;">
                                    <a href="">
                                        <img src="" width="30" height="30" id="UserImage" />
                                    </a>

                                </div>
                            </li>
                            <li></li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "Home")</li>
                            <li>@Html.ActionLink("Regist", "Regist", "Home")</li>
                        }
                    }
                    else
                    {
                        <li style="color:white;text-align:center;line-height:50px;">
                            Welcome to the arrival of
                            <span id="UserName"></span>
                            ！
                        </li>
                        <li id="LoginUser" style="height:50px;">
                            <div style="width:30px; height:30px; border-radius:50%; overflow:hidden;text-align:center;margin-top:10px;">
                                <a href="">
                                    <img src="" width="30" height="30" id="UserImage" />
                                </a>

                            </div>
                            <ul id="List" style="float:right;width:150px;margin:0 auto;background-color:aliceblue;position:absolute;display:none;right:-80px;margin-top:10px;">
                                <li>
                                    @Html.ActionLink("My Profile", "Information", "Home")
                                </li>
                                <li>
                                    @Html.ActionLink("My Status", "Status", "Home")
                                </li>
                                <li>
                                    @Html.ActionLink("My Post", "Post", "Home")
                                </li>
                                <li>
                                    @Html.ActionLink("Logot", "Logot", "Home")
                                </li>
                            </ul>

                        </li>
                    }
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ©CopyRight 2006-2019 JB51.Net Inc All Rights Reserved. LostandFound  All rights reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
